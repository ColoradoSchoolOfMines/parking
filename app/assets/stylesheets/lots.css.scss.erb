<% environment.context_class.instance_eval { include LotsHelper } %>
$img-width: <%= get_size_for_dimension( :medium, Parking::Application.config.x)%>px;
$img-height: <%= get_size_for_dimension( :medium, Parking::Application.config.y )%>px;
.lotView {
    background-color:  #b1b1b1;
}

.mapview {
    
    img {
        border:1px solid #888;
        border-radius:10px;
        width:$img-width !important;
        height:$img-height !important;
        min-width: $img-width !important;
        min-height: $img-height !important;
    }
    
}

