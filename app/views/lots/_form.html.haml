= form_for(@lot) do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      Lot

    - if @lot.errors.any?
      #error_explanation
        %h2
          = pluralize(@lot.errors.count, "error")
          prohibited this lot from being saved:
        %ul
          - @lot.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :total_spots, "Total Spots"
      = f.number_field :total_spots
    .field
      = f.label :cars
      = f.number_field :cars
    .field
      = f.label :type_type, "Type"
      = f.select(:type_type, %w[ commuter general ], { :include_blank => false })
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', lots_path, :class => 'btn'