.page-header
  %h1 Parking Lots
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Cars
      %th Actions
  %tbody
    - @lots.each do |lot|
      %tr
        %td= lot.name
        %td
          = lot.cars
          \/
          =lot.total_spots
        %td
          = link_to 'Show', lot, :class => 'btn btn-mini'
          = link_to 'Edit', edit_lot_path(lot), :class => 'btn btn-mini'
          = link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger'
%br/
.form-actions
  = link_to 'New Lot', new_lot_path, :class => 'btn'